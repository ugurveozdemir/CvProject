@model List<CVproject.Models.TblSertificates>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="mb-3">
                                <a href="/Sertificate/NewSertificate" class="btn btn-info">Add Sertificate</a>
                            </div>
                                
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    <!-- timeline time label -->
                                    @foreach (var item in Model)
                                    {

                                        <div class="time-label">
                                            <span class="bg-success">
                                                @item.Date
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-medal bg-warning"></i>
                                            <div class="timeline-item">

                                                <div class="timeline-body">
                                                    @item.Description
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Sertificate/UpdateSertificate/@item.Id" class="btn btn-primary btn-sm">Update</a>
                                                    <a href="/Sertificate/DeleteSertificate/@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                             
                            </div>
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
 
    </section>
</body>
</html>
